{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/idp-demo/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/idp-demo/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/idp-demo",
  "projects": {
    "idp-demo": {
      "type": "application",
      "root": "apps/idp-demo",
      "entryFile": "main",
      "sourceRoot": "apps/idp-demo/src",
      "compilerOptions": {
        "tsConfigPath": "apps/idp-demo/tsconfig.app.json"
      }
    },
    "mailapp": {
      "type": "application",
      "root": "apps/mailapp",
      "entryFile": "main",
      "sourceRoot": "apps/mailapp/src",
      "compilerOptions": {
        "tsConfigPath": "apps/mailapp/tsconfig.app.json"
      }
    }
  }
}